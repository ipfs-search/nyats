    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "removeComments": false,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["src/**/*"]
}
